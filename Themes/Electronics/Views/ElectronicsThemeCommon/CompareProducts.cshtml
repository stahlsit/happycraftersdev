@{
    var storeLocation = Nop.Core.Infrastructure.EngineContext.Current.Resolve<Nop.Core.IWebHelper>().GetStoreLocation();
}
@if (Model.Products.Count > 0)
{
    <div class="block block-compare-products">
        <div class="title">
            <strong><span>@T("SevenSpikes.Themes.Electronics.Products.Compare")</span> </strong>
        </div>
        <div class="clear">
        </div>
        <div class="listbox">
            <ul>
                @foreach (var product in Model.Products)
                {
                    <li class="item-box"><a href="@Url.RouteUrl("Product", new { SeName = product.SeName })" >@product.DisplayName</a></li>
                    <li class="separator">&nbsp; </li>
                }
            </ul>
            <div class="buttons">
                <input type="button" value="Compare" class="compareproductsboxcomparebutton" onclick="setLocation('@Url.RouteUrl("CompareProducts")', '_self');" />
            </div>
        </div>
    </div>
}